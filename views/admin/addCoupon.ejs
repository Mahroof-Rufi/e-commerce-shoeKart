  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
      <%- include('./partials/_navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <%- include('./partials/_sidebar.ejs') %>
        <!-- partial -->
        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row col-md-12 grid-margin stretch-card">
                  <div class="card">
                    <h4 class="card-title" style="margin-top: 2rem;">Add new Coupon</h4>
                    <form class="forms-sample col-md-12" style="margin-bottom: 2rem;" action="/admin/add_coupon" method="post">
                      <div class="row">
                        <div class="form-group col-md-6">
                          <label for="couponCode" style="float: left;">Coupon code</label>
                          <input style="text-transform: uppercase;" type="text" name="couponCode" class="form-control" id="couponCode" placeholder="coupon code">
                        </div>
                        <div class="form-group col-md-6">
                          <label for="discountValue" style="float: left;">Discount value</label>
                          <input type="text" name="discountValue" class="form-control" id="discountValue" placeholder="discount value">
                        </div>
                      </div>
                      <div class="row form-group col-md-12">
                        <label for="description" style="float: left;">Description</label>
                        <input type="text" name="description" class="form-control" id="description" placeholder="description">
                      </div>
                      <div class="row">
                        <div class="form-group col-md-6">
                          <label for="activationDate" style="float: left;">Activation date</label>
                          <input type="date" name="activationDate" class="form-control" id="activationDate" placeholder="activation date">
                        </div>
                        <div class="form-group col-md-6">
                          <label for="expireDate" style="float: left;">Expiration date date</label>
                          <input type="date" name="expireDate" class="form-control" id="expireDate" placeholder="expiration date">
                        </div>
                      </div>
                      <div class="row">
                        <div class="form-group col-md-6">
                          <label for="minPurchaseAmount" style="float: left;">Minimum purchase amount</label>
                          <input type="number" name="minPurchaseAmount" class="form-control" id="minPurchaseAmount" placeholder="minimum purchase amount">
                        </div>
                        <div class="form-group col-md-6">
                          <label for="totalUsageLimit" style="float: left;">Maximum usage limit</label>
                          <input type="number" name="totalUsageLimit" class="form-control" id="totalUsageLimit" placeholder="maximum usage limit">
                        </div>
                      </div>
                      <div class="row">
                        <div class="form-group col-md-6 text-left">
                            <a href="/admin/coupons"><button type="button" class="btn btn-secondary">cancel</button></a>
                        </div>
                        <div class="form-group col-md-6 text-right">
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
              
              
          
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <%- include('./partials/_footer.ejs') %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/admin/assets/vendors/js/vendor.bundle.base.js"></script>
