<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Connect Plus</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="/admin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/admin/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="/admin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <link rel="stylesheet" href="/admin/vendor/select2/select2.min.css">
    <link rel="stylesheet" href="/admin/assets/vendors/bootstrap-datepicker/bootstrap-datepicker.min.css">
    <!-- End plugin css for this page -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css" rel="stylesheet">
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="/admin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="/admin/assets/images/favicon.png" />
  </head>
  <body>
    <div class="container-scroller">
      <!-- partial:../../partials/_navbar.html -->
      <%- include('./partials/_navbar.ejs') %>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:../../partials/_sidebar.html -->
        <%- include('./partials/_sidebar.ejs') %>
        <!-- partial -->
        <div class="main-panel">
          <div class="content-wrapper">
            <div class="row">
                <div class="col-md-12 grid-margin stretch-card">
                    <div class="card">
                        <h4 class="card-title" style="margin-top: 2rem;">Edit Product</h4>
                        <form action="/admin/edit_product" method="POST" id="productEditForm" enctype="multipart/form-data" style="margin-bottom: 2rem;">
                            <div class="form-group col-md-12">
                                <label for="exampleInputName1" style="float: left;">Product name</label>
                                <input type="text" name="name" value="<%= product.name %>" class="form-control" id="exampleInputName1" placeholder="Name">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="exampleInputEmail3" style="float: left;">Product category</label>
                                <input type="text" name="category" value="<%= product.category %>" class="form-control" id="exampleInputEmail3" placeholder="Category">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="exampleInputPassword4" style="float: left;">Stock count</label>
                                <input type="number" name="stock" value="<%= product.stock %>" class="form-control" id="exampleInputPassword4" placeholder="Stock">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="exampleInputPassword5" style="float: left;">Product price</label>
                                <input type="number" name="price" value="<%= product.price %>" class="form-control" id="exampleInputPassword5" placeholder="Price">
                            </div>
                            <h4 class="card-title">Choose product images</h4>
                            <div class="row col-md-12">
                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                    <label for="image1" class="image-label">Image 1</label>
                                
                                    <div class="rounded-image-preview">
                                        <img id="imagePreview1" width="300" height="300" src="/products/croped/<%= product.images.image1 %>" alt="Preview" />
                                    </div>
                                
                                    <div class="d-flex align-items-center mt-2">
                                        <input name="image1" type="file" accept="image/*" id="image1" class="imageInput" onchange="previewImage(1)" />
                                        <button class="ml-2 btn btn-danger" type="button" onclick="deleteProductImage('<%= product._id %>','image1')">remove</button>
                                    </div>
                                </div>
                                
                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                    <label for="image2" class="image-label">Image 2</label>
                                    <div class="rounded-image-preview">
                                        <img id="imagePreview2" width="300" height="300" src="/products/croped/<%= product.images.image2 %>" alt="Preview" />
                                    </div>
                                    
                                    <div class="d-flex align-items-center mt-2">
                                        <input name="image2" type="file" accept="image/*" id="image2" class="imageInput" onchange="previewImage(2)" />
                                        <button class="ml-2 btn btn-danger" type="button" onclick="deleteProductImage('<%= product._id %>','image2')">remove</button>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                    <label for="image3" class="image-label">Image 3</label>
                                    <div class="rounded-image-preview">
                                        <img id="imagePreview3" width="300" height="300" src="/products/croped/<%= product.images.image3 %>" alt="Preview" />
                                    </div>
                                    
                                    <div class="d-flex align-items-center mt-2">
                                        <input name="image3" type="file" accept="image/*" id="image3" class="imageInput" onchange="previewImage(3)" />
                                        <button class="ml-2 btn btn-danger" type="button" onclick="deleteProductImage('<%= product._id %>','image3')">remove</button>
                                    </div>
                                </div>
                                <div class="col-lg-3 col-md-6 rounded-image-preview">
                                    <label for="image4" class="image-label">Image 4</label>
                                    <div class="rounded-image-preview">
                                        <img id="imagePreview4" width="300" height="300" src="/products/croped/<%= product.images.image4 %>" alt="Preview" />
                                    </div>
                                    
                                    <div class="d-flex align-items-center mt-2">
                                        <input name="image4" type="file" accept="image/*" id="image4" class="imageInput" onchange="previewImage(4)" />
                                        <button class="ml-2 btn btn-danger" type="button" onclick="deleteProductImage('<%= product._id %>','image4')">remove</button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-12" style="margin-top: 2rem;">
                                <label for="exampleTextarea1">Description</label>
                                <textarea class="form-control" name="description" id="exampleTextarea1" rows="7"><%= product.description %></textarea>
                            </div>
                            <input type="hidden" name="id" value="<%= product._id %>">
                            <div class="col-md-12" style="display: flex; justify-content: space-between;">
                                <button type="submit" class="btn btn-primary">Submit</button>
                                <a href="/admin/products" class="btn btn-light">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
          <!-- content-wrapper ends -->
          <!-- partial:../../partials/_footer.html -->
          <%- include('./partials/_footer.ejs') %>
          <!-- partial -->
        </div>
        <!-- main-panel ends -->
      </div>
      <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="/admin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <script src="/admin/vendor/select2/select2.min.js"></script>
    <script src="/admin/assets/js/typeahead.js"></script>
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="/admin/assets/js/off-canvas.js"></script>
    <script src="/admin/assets/js/hoverable-collapse.js"></script>
    <script src="/admin/assets/js/misc.js"></script>
    <!-- endinject -->
    <!-- Custom js for this page -->
    <script src="/admin/assets/js/file-upload.js"></script>
    <script src="/admin/assets/js/typeahead.js"></script>
    <script src="/admin/assets/js/select2.js"></script>
    <!-- End custom js for this page -->
    <!-- sweet alert -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.all.min.js"></script>
  </body>
</html>